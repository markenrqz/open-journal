<h1>Create a New Post</h1>
<form action="/new" method="POST" class="form-container">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="Enter title" required>
    <label for="content">Content</label>
    <textarea name="content" id="content" placeholder="Write your content..." rows="10" required></textarea>
    <input type="hidden" id="timestamp" name="timestamp">
    <button class="button" type="submit">Create Post</button>
</form>

<script>
    function formatDate() {
        const now = new Date();
        const options = { 
            year: "numeric", month: "short", day: "numeric",
            hour: "numeric", minute: "2-digit", hour12: true
        };
        return now.toLocaleString("en-US", options);
    }

    document.getElementById("timestamp").value = formatDate();
</script>

