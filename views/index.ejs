<%-include('partials/header.ejs') %>


  <h1>All Posts</h1>
  <div class="cards">
  <% posts.forEach(function(post) { %>
      <div class="card">        
          <p><small><%= post.timestamp %></small></p>
          <a href="/post/<%= post.id %>"><h2><%= post.title %></h2></a>
          <p>
              <%= post.content.length > 100 ? post.content.substring(0, 200) + '...' : post.content %>
          </p>      
          <a href="/post/<%= post.id %>"><small>Read More</small></a>
      </div>
  <% }); %>  
  </div>


<%-include('partials/footer.ejs') %>